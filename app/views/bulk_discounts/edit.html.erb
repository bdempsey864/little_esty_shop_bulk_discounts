<%= form_with url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |form| %>
  <p><%= form.label :percentage, "Percentage:" %>
  <%= form.number_field :percentage, step: :any, value: @bulk_discount.percentage %></p>
  <p><%= form.label :quantity_threshold, "Quantity Threshold:" %>
  <%= form.number_field :quantity_threshold, value: @bulk_discount.quantity_threshold %></p>
  <%= form.submit "Submit" %>
<% end %>